
<!doctype html>
<html lang="en">
<head>
    <%-include('./partials/head'); %>
    <link rel="stylesheet" href="index.css">
</head>
<body>
<%- include('./partials/navbar'); %>


<form method="POST" action="/admin/user?_method=DELETE">
    <div class="card">
        <div class="card-header">
            Delete user
        </div>
        <div class="card-body">
            <input type="text" placeholder="username" name="deluser">
            <button class="btn btn-primary btn-block" type="submit">Delete</button>
        </div>
    </div>
</form>
<form method="POST" action="/admin/user?_method=PATCH">
    <div class="card">
        <div class="card-header">
            Update user
        </div>
        <div class="card-body">
            <input placeholder="username" name="upusername">
            <input placeholder="new password" name="upnewpassword">

            <button class="btn btn-primary btn-block" type="submit">Update</button>
        </div>
    </div>
</form>

<form method="POST" action="/admin/user">
    <div class="card">
        <div class="card-header">
            Create user
        </div>
        <div class="card-body">
            <input placeholder="username" name="crusername">
            <input placeholder="password" name="crpassword">
            <button class="btn btn-primary btn-block" type="submit">Create</button>
        </div>
    </div>
</form>

<form method="POST" action="/admin/find">
    <div class="card">
        <div class="card-header">
            Find user
        </div>
        <div class="card-body">
            <input placeholder="username" name="username">
            <button class="btn btn-primary btn-block" type="submit">Find</button>
        </div>
    </div>
</form>

</body>
</html>